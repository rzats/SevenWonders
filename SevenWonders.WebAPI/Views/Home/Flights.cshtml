@{
    ViewBag.Title = "Flights";
}

<h2>Flights</h2>


<table class="table">
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>

					<div class="panel panel-default" style="margin-bottom: 0;">
						<div class="panel-heading col-md-12">
							<div class="row">
								<div class="panelHeadingItem headCustomerName col-md-4">
									<h3 class="panel-title">
										<b>@item.Number</b>
									</h3>
								</div>
								<div class="panelHeadingItem pull-right" style="padding-right:15px;">
									<button class="btn btn-xs" type="button" style="padding:5px"
											data-toggle="modal" data-target="#edit-@item.Id">
										<div class="glyphicon glyphicon-pencil"></div>
									</button>
									<button class="btn btn-xs" type="button" style="padding:5px"
											data-toggle="modal" data-target="#schedule-@item.Id">
										<div class="glyphicon glyphicon-list-alt"></div>
									</button>
									<button class="btn btn-xs" type="button" style="padding:5px"
											data-toggle="modal" data-target="#delete-@item.Id">
										<div class="glyphicon glyphicon-remove"></div>
									</button>
								</div>
							</div>
						</div>
						<div class="panel-body">
							<div class="col-xs-12 col-sm-1 col-md-1 col-lg-1 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
							</div>
							<div class="col-xs-12 col-sm-10 col-md-10 col-lg-100 ">

								<div class="row">
									<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" style="padding-left:0px;">
										<dl style="margin-bottom:0px;">
											<dt>Departure:</dt>
											<dd>@item.DepartureAirport.Code, @item.DepartureAirport.Name (@item.DepartureAirport.City.Name, @item.DepartureAirport.City.Country.Name)</dd>
										</dl>
									</div>
									<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
										<dl style="margin-bottom:0px;">
											<dt>Arrival:</dt>
											<dd>@item.ArrivalAirport.Code, @item.ArrivalAirport.Name (@item.ArrivalAirport.City.Name, @item.ArrivalAirport.City.Country.Name)</dd>
										</dl>
									</div>
								</div>

								<div class="row">
									<dl style="margin-bottom:0px;">
										<dt>Aireplane:</dt>
										<dd>@item.Airplane.Model, @item.Airplane.Company</dd>
										<dt>Seats amount:</dt>
										<dd>@item.Airplane.SeatsAmount</dd>
										<dt>Ticket price:</dt>
										<dd>@item.Price</dd>
									</dl>
								</div>
							</div>
						</div>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>



